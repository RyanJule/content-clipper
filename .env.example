# Copy this to .env: cp .env.example .env

ENVIRONMENT=development
DEBUG=true
POSTGRES_USER=clipper
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=clipper_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://clipper:CHANGE_ME@postgres:5432/clipper_db
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_URL=redis://:@redis:6379/0
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=clipper-media
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
# REQUIRED for Instagram publishing: the public-facing base URL that
# Instagram's servers can reach to download media files.  The internal Docker
# hostname (minio:9000) is not routable from the internet, so without this
# setting the Instagram Graph API cannot fetch the image/video and returns the
# misleading error "Only photo or video can be accepted as media type".
# Example values:
#   https://machine-systems.org/minio   (if Nginx proxies /minio â†’ minio:9000)
#   https://storage.machine-systems.org (dedicated MinIO subdomain)
MINIO_PUBLIC_URL=https://machine-systems.org/minio
OPENAI_API_KEY=your_key_here
SECRET_KEY=generate_with_openssl_rand_hex_32
FERNET_KEY=generate_with_python_cryptography_fernet
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BACKEND_PORT=8000
FRONTEND_PORT=3000
FLOWER_PORT=5555
VITE_API_URL=http://localhost:8000
FLOWER_USER=admin
FLOWER_PASSWORD=CHANGE_ME
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# URLs for OAuth callbacks
BACKEND_URL=https://machine-systems.org
FRONTEND_URL=https://machine-systems.org

# Social Media OAuth Credentials
# Instagram/Facebook - Get from https://developers.facebook.com/apps
INSTAGRAM_CLIENT_ID=your_facebook_app_id
INSTAGRAM_CLIENT_SECRET=your_facebook_app_secret

# YouTube - Get from https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# LinkedIn - Get from https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# TikTok - Get from https://developers.tiktok.com/apps/
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=